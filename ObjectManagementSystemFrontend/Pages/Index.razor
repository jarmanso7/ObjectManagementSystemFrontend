@page "/"
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting;
@using ObjectManagementSystemFrontend.Models;
@inject HttpClient Http
@inject IConfiguration Configuration

@inject IWebAssemblyHostEnvironment HostEnvironment

<PageTitle>Object Management System</PageTitle>

<CascadingValue Value=@objects>
    <CascadingValue Value=@relationships>
        <CascadingValue Value=@selectedObject>
            <RadzenStack Orientation="Orientation.Horizontal" Gap="0">
                <GraphComponent @ref="graphComponent" />
                <RadzenStack Orientation="Orientation.Vertical" Gap="0">
                    <ObjectListComponent @ref="objectListComponent" />
                    <SelectedObjectComponent @ref="selectedObjectComponent" />
                </RadzenStack>
            </RadzenStack>
        </CascadingValue>
    </CascadingValue>
</CascadingValue> 
